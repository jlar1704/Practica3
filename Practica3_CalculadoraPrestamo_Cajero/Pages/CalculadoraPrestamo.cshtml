@page
@model Practica3_CalculadoraPrestamo_Cajero.Pages.CalculadoraPrestamoModel
@{
}


<h1>Calculadora de Préstamos</h1>
<form method="get">
    <label for="fmonto">Monto Préstamo:</label>
    <input type="number" id="fmonto" name="MontoPrestamo"><br>
    <label for="fcantcuotas">Cantidad Cuotas:</label>
    <input type="number" id="fcantcuotas" name="CantidadCuotas"><br>
    <label for="finteres">Porcentaje Interes:</label>
    <input type="text" id="finteres" name="PorcentajeInteres">
    <input type="submit" value="Calcular" name="Calcular" />
</form>

<br />
<h1>Cuota Mensual: @string.Format("{0:#,0.00}", @Model.CuotaMensual)</h1>